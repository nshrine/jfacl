#!/bin/sh

JAVA=`which java`
if [ -z "$JAVA" ]; then
	echo "Cannot find java in your path"
	exit 1
fi

# Set BASE to where you have installed jfacl
BASE=`dirname $0`/..

# Set THEME to the Java theme you prefer
# 'ocean' is the new Java 5.0 style, I prefer the classic 'steel' look
#THEME=ocean
THEME=steel

KERNEL=`/bin/uname -s`
if [ "${KERNEL}" = "Linux" ]; then
	ARCH=`/bin/uname -m`
elif [ "${KERNEL}" = "SunOS" ]; then
	ARCH=`/bin/uname -p`
fi

LIBRARY_PATH=${BASE}/lib/${KERNEL}/${ARCH}

exec ${JAVA} -classpath ${BASE}/lib/jfacl.jar -Djava.library.path=${LIBRARY_PATH} -Dbase=${BASE} -Dswing.metalTheme=${THEME} org.flimbar.security.acl.UfsAclWin "$*" 
